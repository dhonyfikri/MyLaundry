<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#256286"
    android:gravity="center_horizontal"
    android:padding="45dp"
    tools:context=".Activity.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register / Daftar"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_regFoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_account"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_takeImageReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_photo_camera"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_regUsername"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:paddingHorizontal="10sp"
        android:drawableLeft="@drawable/ic_person"
        android:hint="Username"
        android:inputType="text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/et_regPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:paddingHorizontal="10sp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lock"
            android:hint="Password"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_marginRight="3dp"/>

        <EditText
            android:id="@+id/et_reRegPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:paddingHorizontal="10sp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lock"
            android:hint="Retype Password"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_regNama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:paddingHorizontal="10sp"
        android:layout_marginTop="20dp"
        android:hint="Nama"
        android:textSize="12sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_regAlamat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:paddingHorizontal="10sp"
        android:layout_marginTop="20dp"
        android:hint="Alamat"
        android:textSize="12sp"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_toLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebad50"
            android:text="Back to Login"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            android:layout_marginRight="3dp"/>

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88bd72"
            android:text="Register"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>

</LinearLayout>